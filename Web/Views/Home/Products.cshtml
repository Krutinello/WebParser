@model List<Bll.DTO.ProductDTO>
@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Products</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-4" style="height:400px;">
            <a href="~/Home/Product/@item.Id"><label>@item.Name</label></a>
            <br />
            <img class="img-responsive" src="@item.ImagePath" />
            <br />
            @foreach (var price in item.Prices)
            {
                <p>@price.Date.ToString("dd.MM.yyyy") - @price.Price</p>
                <br />
            }
                <p>@item.Description.Substring(0, 50)@Html.Encode("...") <a href="/Home/Product/@item.Id">Подробнее</a></p>
        </div>
    }
</div>

